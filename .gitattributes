# Set default behavior to automatically normalize line endings
* text=auto

# Force LF line endings for all text files in the repository
# This ensures consistent line endings across different platforms
*.py text eol=lf
*.pyi text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Configuration files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf
*.adoc text eol=lf

# Templates
*.jinja text eol=lf
*.j2 text eol=lf

# Shell scripts (Unix line endings)
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf
*.fish text eol=lf

# Batch files (Windows line endings)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Web files
*.html text eol=lf

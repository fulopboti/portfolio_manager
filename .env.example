# StockApp Configuration Environment Variables
# Copy this file to .env and update with your values

# Application Configuration
STOCKAPP_APPLICATION_DEBUG=true
STOCKAPP_APPLICATION_LOG_LEVEL=DEBUG
STOCKAPP_APPLICATION_ENVIRONMENT=development

# Database Configuration  
STOCKAPP_DATABASE_CONNECTION_DATABASE_PATH=./dev_data/stockapp.db
STOCKAPP_DATABASE_CONNECTION_MEMORY=false
STOCKAPP_DATABASE_POOL_MAX_CONNECTIONS=5

# Event System Configuration
STOCKAPP_EVENT_SYSTEM_BUS_MAX_CONCURRENT_EVENTS=50
STOCKAPP_EVENT_SYSTEM_HANDLERS_TIMEOUT_SECONDS=30

# External API Keys (Required for market data)
STOCKAPP_DATA_PROVIDERS_APIS_ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
STOCKAPP_DATA_PROVIDERS_APIS_IEX_CLOUD_API_KEY=your_iex_cloud_key_here

# Data Provider Configuration
STOCKAPP_DATA_PROVIDERS_MARKET_DATA_PRIMARY=yahoo_finance
STOCKAPP_DATA_PROVIDERS_MARKET_DATA_CACHE_TTL=300

# Portfolio Configuration
STOCKAPP_PORTFOLIO_SIMULATION_INITIAL_CASH=100000.00
STOCKAPP_PORTFOLIO_SIMULATION_COMMISSION_RATE=0.001

# Security Configuration (Production)
STOCKAPP_SECURITY_API_JWT_SECRET=your_jwt_secret_key_here
STOCKAPP_SECURITY_ENCRYPTION_KEY=your_encryption_key_here
STOCKAPP_SECURITY_API_ENABLE_AUTH=false

# Logging Configuration
STOCKAPP_LOGGING_LEVEL=INFO
STOCKAPP_LOGGING_HANDLERS_FILE_ENABLED=true
STOCKAPP_LOGGING_HANDLERS_FILE_PATH=./logs/stockapp.log

# Monitoring Configuration
STOCKAPP_MONITORING_METRICS_ENABLED=true
STOCKAPP_MONITORING_METRICS_PORT=8080

# Strategy Configuration
STOCKAPP_STRATEGIES_SCORING_ENABLED_STRATEGIES=momentum,value,quality
STOCKAPP_STRATEGIES_SCORING_MIN_SCORE_THRESHOLD=60

# Analytics Configuration
STOCKAPP_ANALYTICS_RISK_METRICS_VAR_CONFIDENCE=0.95
STOCKAPP_ANALYTICS_RISK_METRICS_VAR_PERIOD=252